<!DOCTYPE html>
<html lang="en">
	<%- include('./include/head') %>
	<body>
		<%- include('./include/nav') %>
		<div class="container" style="margin-top: 2rem;">
			<div class="row">
				<h3>Активные пользователи:</h3>
			</div>
			<table class="table table-dark">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Имя</th>
                        <th scope="col">Телеграмм Id</th>
                        <th scope="col">Заказов</th>
                    </tr>
                </thead>
                <tbody>
                    <% for(let i=0; i < users.length; i++) {%>
                        <tr>
                            <th scope="col"><%= i + 1 %></th>
                            <td><%= users[i].username %></td>
                            <td><%= users[i].telegram_id %></td>
                            <td><%= users[i].ordersList.length %></td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
		</div>

		<%- include('./include/scripts') %> <%- include('./include/footer') %>
	</body>
</html>
